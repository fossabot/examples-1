all: clean vet build deploy

lint: $(GOPATH)/bin/golint
	@echo "ðŸ”˜ Linting... (ignoring style errors in AWS SDK/Provider)"
	@lint=`golint ./... | grep -v ^vendor/ | grep -E -v -e ${LINTIGNOREINITIALISMS}`; \
	if [ "$$lint" != "" ]; then echo "$$lint"; exit 1; fi

vet:
	@echo "ðŸ”˜ Running go vet..."
	@go vet

build: vet
	@echo "ðŸ”˜ Building..."
	mkdir -p build/
	go build -o build/upload
	@echo "ðŸ“£ check ./build directory for binaries"

clean:
	@echo "ðŸ”˜ Cleaning build dir..."
	@rm -rf build

deploy:
# @echo "ðŸ”˜ Deploying to..."