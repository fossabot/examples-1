all: clean build deploy

build:
	@echo "ğŸ”˜ Building application..."
	npm run build

deploy:
	@echo "ğŸ”˜ Deploying to cluster..."
	pulumi update --yes
	@echo "ğŸ”˜ Locating services..."
	kubectl get services

stop:
	@echo "ğŸ”˜ Removing from cluster..."
	pulumi destroy --yes

clean:
	# @echo "ğŸ”˜ Cleaning workspace..."

.PHONY: build clean all